{{#if id}}
<section class="hero is-medium is-warning is-bold">
      <div class="columns is-mobile">
          <div class="column">
        <div class="container has-text-white has-text-centered">This COERID is already registered!</div> 
        </div>
        </div>
        </section>

{{/if}}

{{#if mobile}}
<section class="hero is-medium is-warning is-bold">
      <div class="columns is-mobile">
          <div class="column">
        <div class="container has-text-white has-text-centered">This Phone Number is already registered!</div> 
        </div>
        </div>
        </section>
{{/if}}

{{#if x}}
<section class="hero is-medium is-warning is-bold">
      <div class="columns is-mobile">
          <div class="column">
        <div class="container has-text-white has-text-centered">This Email is taken!</div> 
        </div>
        </div>
        </section>
{{/if}} 
{{#if errors}}
      {{#each errors}}
      <section class="hero is-medium is-warning is-bold">
      <div class="columns is-mobile">
          <div class="column">
        <div class="container has-text-white has-text-centered">{{msg}}</div> 
        </div>
        </div>
        </section>
      {{/each}}
{{/if}}
{{#if mail}}
<section class="hero is-medium is-warning is-bold">
      <div class="columns is-mobile">
          <div class="column">
        <div class="container has-text-white has-text-centered">This Email is taken!</div> 
        </div>
        </div>
        </section>
{{/if}} 

{{#if wrong}}
<section class="hero is-medium is-warning is-bold">
      <div class="columns is-mobile">
          <div class="column">
        <div class="container has-text-white has-text-centered">The Verification code is incorrect!</div> 
        </div>
        </div>
        </section>
{{/if}} 

<section class="hero is-medium is-dark is-bold">
  <div class="hero-body">
    <div class="column is-4 is-offset-4">
      <div class="box has-background-white has-text-white">
        <div class="has-text-centered is-size-3 has-text-primary">
          <h1 >Confirm your email</h1>
          <hr>
        </div>
        <form class="form-basic" action="/users/emailauth" method="post">     
        <div class="field has-addons has-addons-centered">
          <p class="control">
            <label class="label has-text-danger">Email Address</label>
            <input class="input" name="username" id="username" type="text" placeholder="Email">
          </p>
        </div>
        <br>
        <div class="field">
          <p class="control">
           <center><button type="submit" class="button is-success">
              Send Verification Code
            </button></center> 
          </p>
        </div>
        </form>
        </div>
    </div>
  </div>
</section>

