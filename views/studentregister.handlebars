<script>
  function showDiv(elem){
  if(elem.value.localeCompare("B.Tech"))
  {
    document.getElementById('hidden_div').style.display = "none";
    document.getElementById('hidden_mtech_div').style.display = "block";
  }
  else if(elem.value.localeCompare("M.Tech"))
  {
     document.getElementById('hidden_div').style.display = "block";
    document.getElementById('hidden_mtech_div').style.display = "none";
  }
  else
  {
     document.getElementById('hidden_mtech_div').style.display = "block";
  document.getElementById('hidden_div').style.display = "block";
  }
}
</script>

<section class="hero is-medium is-dark is-bold">
 
    <div class="column is-4 is-offset-4">
      <div class="box has-background-white has-text-white">
        <div class="has-text-centered is-size-3 has-text-primary">
          <h1 >Student Register</h1>
          <hr>
        </div>
       <form method="post" id="msform" action="/users/studentregform">
        <div class="field">
          <p class="control">
            <label class="label has-text-danger">First Name</label>
            <input class="input" style="text-transform: capitalize;" name="fname" id="fname" type="text" placeholder="First Name">
          </p>
        </div>
        <div class="field  ">
          <p class="control">
            <label class="label has-text-danger">Last Name</label>
            <input class="input" style="text-transform: capitalize;" name="lname" id="lname" type="text" placeholder="Last Name">
          </p>
        </div>
        <div class="field  ">
